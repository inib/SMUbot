<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="Bg0">#12131A</Color>
    <Color x:Key="Bg1">#1E1F29</Color>
    <Color x:Key="Accent">#9146FF</Color>
    <Color x:Key="Text">#FFFFFF</Color>
    <Color x:Key="SubText">#CFCFE1</Color>

    <SolidColorBrush x:Key="BrushBg" Color="{StaticResource Bg0}"/>
    <SolidColorBrush x:Key="BrushPanel" Color="{StaticResource Bg1}"/>
    <SolidColorBrush x:Key="BrushAccent" Color="{StaticResource Accent}"/>
    <SolidColorBrush x:Key="BrushText" Color="{StaticResource Text}"/>
    <SolidColorBrush x:Key="BrushSubText" Color="{StaticResource SubText}"/>

    <Style x:Key="BaseInputStyle" TargetType="Control">
        <Setter Property="Background"  Value="#1A1B24"/>
        <Setter Property="Foreground"  Value="{StaticResource BrushText}"/>
        <Setter Property="BorderBrush" Value="#3B3C4A"/>
        <Setter Property="Margin"      Value="4"/>
    </Style>

    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource BrushBg}"/>
        <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>

    <Style TargetType="TabControl">
        <Setter Property="Background" Value="{StaticResource BrushBg}"/>
    </Style>
    <Style TargetType="TabItem">
        <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
        <Setter Property="Padding"    Value="10,6"/>
        <Setter Property="Margin"     Value="0,0,8,0"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="Background"     Value="#2A2B37"/>
        <Setter Property="Foreground"     Value="{StaticResource BrushText}"/>
        <Setter Property="BorderBrush"    Value="{StaticResource BrushAccent}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding"        Value="10,6"/>
        <Setter Property="Margin"         Value="4"/>
    </Style>

    <Style TargetType="TextBox" BasedOn="{StaticResource BaseInputStyle}"/>
    <Style TargetType="ComboBox" BasedOn="{StaticResource BaseInputStyle}"/>
    <Style TargetType="ListBox"  BasedOn="{StaticResource BaseInputStyle}">
        <Setter Property="Background" Value="{StaticResource BrushPanel}"/>
    </Style>

</ResourceDictionary>