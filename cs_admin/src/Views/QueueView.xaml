<UserControl x:Class="TwitchSongAdmin.Views.QueueView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Content="Refresh" Command="{Binding RefreshCommand}"/>
            <Button Content="Archive Stream" Command="{Binding ArchiveCommand}"/>
            <Button Content="Open Queue" Command="{Binding OpenQueueCommand}"/>
            <Button Content="Close Queue" Command="{Binding CloseQueueCommand}"/>
            <TextBox Width="200" x:Name="SongText" Text=""/>
            <Button Content="Add as Streamer" Command="{Binding AddStreamerSongCommand}"/>
            <Button Content="Unzip Downloads" Command="{Binding UnzipDownloadsCommand}" />
        </StackPanel>

        <ListBox Grid.Row="1" ItemsSource="{Binding Items}" SelectedItem="{Binding Selected}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="4" Padding="8" Background="{StaticResource BrushPanel}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="{Binding DisplayLine1}" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding DisplayLine2}" Foreground="{StaticResource BrushSubText}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="▲"
                                    Command="{Binding DataContext.MoveUpCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                    CommandParameter="{Binding}"/>
                                <Button Content="▼"
                                    Command="{Binding DataContext.MoveDownCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
          CommandParameter="{Binding}"/>
                                <Button Content="Skip"
          Command="{Binding DataContext.SkipCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
          CommandParameter="{Binding}"/>
                                <Button Content="Prio"
          Command="{Binding DataContext.TogglePrioCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
          CommandParameter="{Binding}"/>
                                <Button Content="Played"
          Command="{Binding DataContext.MarkPlayedCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
          CommandParameter="{Binding}"/>
                                <Button Content="YT-DL"
          Command="{Binding DataContext.YtdlCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
          CommandParameter="{Binding}"/>
                                <Button Content="Ableton"
          Command="{Binding DataContext.LoadAbletonCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
          CommandParameter="{Binding}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock Grid.Row="2" Text="{Binding Status}" Foreground="{StaticResource BrushSubText}" Margin="4"/>
    </Grid>
</UserControl>