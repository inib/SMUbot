<UserControl x:Class="TwitchSongAdmin.Views.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TwitchSongAdmin.ViewModels">
  <UserControl.DataContext>
    <vm:LibraryViewModel />
  </UserControl.DataContext>
  <Grid Margin="10">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <StackPanel Grid.Column="0">
      <TextBlock Text="STEMS available" FontWeight="Bold"/>
      <ListBox ItemsSource="{Binding StemsAvailable}">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding Display}"/>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </StackPanel>

    <StackPanel Grid.Column="1">
      <TextBlock Text="Downloaded only" FontWeight="Bold"/>
      <ListBox ItemsSource="{Binding DownloadedOnly}">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding Display}"/>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </StackPanel>
  </Grid>
</UserControl>